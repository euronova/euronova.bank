{
  "version": 2,
  "functions": {
    "server/index.ts": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "BREVO_API_KEY": "@brevo_api_key",
    "NODE_ENV": "production"
  }
}
